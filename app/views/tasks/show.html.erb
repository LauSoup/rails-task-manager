<h2><%= @task.title %></h2>

<div class="details">
<p> <%= @task.details %> </p>
</div>

<p>
  <%= check_box_tag 'task_ids[]', @task.id, checked = @task.completed, disabled: true %>
  <%= @task.completed ? "This task is completed" : "This task is not completed yet" %>
</p>

<br>

<hr>
<%= link_to "Back to list", tasks_path %>