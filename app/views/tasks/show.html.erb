<div class="container">

<div class="header-btn">
  <h2><%= @task.title %></h2>
  <%= link_to "Edit this task", task_update_path(@task), class: "btn btn-outline-secondary"  %>
</div>

<div class="details">
  <p> <%= @task.details %> </p>
</div>
<br>

<p>
  <%= check_box_tag 'task_ids[]', @task.id, checked = @task.completed, disabled: true %>
  <%= @task.completed ? "This task is completed" : "This task is not completed yet" %>
</p>

<br>

<hr>

<%= link_to "Back to list", tasks_path%>

</div>